					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {\r",
							"    pm.response.to.have.status(200);\r",
							"});\r",
							"\r",
							"var jsonArray = pm.response.json();\r",
							"console.log(jsonArray.result.length);\r",
							"\r",
							"var inquiry = jsonArray.result.filter(function (incident) {\r",
							"    return incident.category == 'inquiry'\r",
							"});\r",
							"console.log(inquiry.map(incident => incident.sys_id));\r",
							"\r",
							"for(var i = 0; i < jsonArray.result.length; i++) {\r",
							"    console.log(jsonArray.result[i].sys_id);\r",
							"}\r",
							"\r",
							"pm.test(\"Response time is less than 500ms\", function () {\r",
							"    pm.expect(pm.response.responseTime).to.be.below(500);\r",
							"});"
